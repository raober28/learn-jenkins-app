pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    echo "Cleaning previous install state..."
                    rm -rf node_modules package-lock.json

                    echo "Listing files"
                    ls -la
                    echo "Node version:"
                    node --version
                    echo "NPM version:"
                    npm --version
                    
                    echo "Setting up local NPM config..."
                    echo "strict-ssl=false" > .npmrc
                    npm install --unsafe-perm

                    echo "Building the app..."
                    npx react-scripts build

                    echo "Listing output..."
                    ls -la
                '''
            }
        }
    }
}